      <label for="name">Name: </label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="date">Event Date: </label>
      {{input type=date value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="location">Location: </label>
      {{input value=location id="location"}}
    </div>

