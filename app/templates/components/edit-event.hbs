{{#ember-remodal
  openButton='Edit Event'
  confirmButton='Save'
  title='Edit Event'
  buttonClasses='btn'
  onClose=(action 'editEvent')
}}
<form>
  <div class="form-group">
    <label for="name">Event Name: </label>
    {{input value=name placeholder=event.name}}
  </div>

  <div class="form-group">
    <label for="date">Event Date: </label>
    {{input value=date placeholder=event.date}}
  </div>

  <div class="form-group">
    <label for="address">Event Address: </label>
    {{input value=address placeholder=event.address}}
  </div>

  <div class="form-group">
    <label for="description">Event Description: </label>
    {{input value=description placeholder=event.description}}
  </div>

  <div class="form-group">
    <label for="image">Event Image URL: </label>
    {{input value=image}}
  </div>
</form>
{{/ember-remodal}}
