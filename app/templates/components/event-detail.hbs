<h1>{{event.name}}</h1>
<h2>{{format-date event}}</h2>
<p>{{event.description}}</p>
<img class="aboutPhotos" src={{event.image}}><br>
{{#if session.isAuthenticated}}
  {{#if event.inBookmarks}}
    <h4>Bookmarked</h4>
  {{else}}
    <button {{action 'saveToBookmarks' event}}>Bookmark Event</button>
  {{/if}}
{{/if}}
